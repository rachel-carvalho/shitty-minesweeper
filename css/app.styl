$bomb-size = 30px

body
  font-family: sans-serif
  line-height: 1
  max-width: 300px
  margin: 0 auto

#toolbar
  padding: 10px
  text-align: center

  time, span
    font-family: monospace

  span
    margin: 0 10px

#board
  button
    width: $bomb-size
    height: @width
    vertical-align: top
    position: relative

    &.open
      border: 0

    &.wrong-flag
      &::before
        content: '‚ùå'
        position: absolute
        font-size: $bomb-size
        line-height: 1
        width: @font-size
        height: @width
        left: 0
        top: 0
